extends layout

block content
  #login-form.container
    form.form-signin(role='form', action='/login', method='post')
      h2.form-signin-heading Please sign in
      input.form-control(type='email', name='username',  placeholder='Email address', required, autofocus, value= last_tried_name ? last_tried_name : '')
      input.form-control(type='password', name='password',  placeholder='Password', required)
      .checkbox
        label
          input(type='checkbox', name='rememberme', checked=last_rememberme) 
          label Remember me
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
      if message
        .alert.alert-danger(role='alert')=message
