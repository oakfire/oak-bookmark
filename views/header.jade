.nvabar.navbar-inverse.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button',data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#')=title
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li#nav-home
          a(href='/') Home
        li#nav-about
          a(href='/about') About
      ul.nav.navbar-nav.navbar-right
        if !login
          li#nav-login
            a(href='/login') Sign in
        else
          li#nav-account
            a(href='#')=user.account
          li#nav-logout
            a(href='/logout') Sign out

